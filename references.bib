@article{bonnevilleBayesianDeepLearning2022,
  title = {Bayesian Deep Learning for Partial Differential Equation Parameter Discovery with Sparse and Noisy Data},
  author = {Bonneville, Christophe and Earls, Christopher},
  date = {2022-09},
  journaltitle = {Journal of Computational Physics: X},
